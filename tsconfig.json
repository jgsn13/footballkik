{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["src/*"],
      "main/*": ["src/main/*"],
      "adapters/*": ["src/main/adapters/*"],
      "middlewares/*": ["src/main/middlewares/*"],
      "config/*": ["src/main/_config/*"],
      "env/*": ["src/main/_config/env/*"],
      "shared/*": ["src/main/_shared/*"],
      "utils/*": ["src/main/_shared/utils/*"],
      "presentation/*": ["src/presentation/*"],
      "controllers/*": ["src/presentation/controllers/*"],
      "signatures/*": ["src/presentation/signatures/*"],
      "errors/*": ["src/presentation/errors/*"],
      "helpers/*": ["src/presentation/helpers/*"],
      "domain/*": ["src/domain/*"],
      "data/*": ["src/data/*"],
      "infra/*": ["src/infra/*"],
      "db/*": ["src/infra/db/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
